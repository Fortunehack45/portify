{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile information.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "The user's unique ID."
        },
        "username": {
          "type": "string",
          "description": "The user's unique username."
        },
        "name": {
          "type": "string",
          "description": "The user's full name."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "bio": {
          "type": "string",
          "description": "A short biography of the user."
        },
        "jobTitle": {
          "type": "string",
          "description": "The user's professional job title."
        },
        "location": {
          "type": "string",
          "description": "The user's physical location."
        },
        "availability": {
          "type": "string",
          "enum": ["open to work", "available for freelance", "not available"],
          "description": "The user's work availability status."
        },
        "skills": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "A list of the user's skills."
        },
        "socials": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "platform": {
                "type": "string",
                "enum": ["github", "linkedin", "twitter", "website"]
              },
              "url": {
                "type": "string",
                "format": "uri"
              }
            },
            "required": ["platform", "url"]
          }
        },
        "selectedTemplate": {
          "type": "string",
          "enum": [
            "minimal-light", 
            "modern-dark", 
            "professional-blue",
            "retro-gamer",
            "brutalist-web",
            "cyberpunk-neon",
            "elegant-serif",
            "cosmic-dream",
            "hacker-terminal",
            "craftsman-paper",
            "photo-grid",
            "lakeside-dawn",
            "geometric-dark",
            "minimal-serif",
            "corporate-clean",
            "glassmorphism",
            "neobrutalism",
            "storybook",
            "two-column-image",
            "bold-and-blue",
            "newspaper",
            "dark-academia"
          ],
          "description": "The user's selected portfolio template."
        },
        "createdAt": {
            "type": "string",
            "format": "date-time"
        },
        "updatedAt": {
            "type": "string",
            "format": "date-time"
        }
      },
      "required": ["id", "username", "name", "email", "selectedTemplate", "createdAt", "updatedAt"]
    },
    "Project": {
      "title": "Project",
      "description": "Represents a project in a user's portfolio.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "userId": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "imageUrl": {
          "type": "string",
          "format": "uri",
          "description": "URL for the project's cover image."
        },
        "techStack": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "githubLink": {
          "type": "string",
          "format": "uri"
        },
        "liveDemo": {
          "type": "string",
          "format": "uri"
        },
        "createdAt": {
            "type": "string",
            "format": "date-time"
        },
        "updatedAt": {
            "type": "string",
            "format": "date-time"
        }
      },
      "required": ["id", "userId", "title", "description", "techStack", "createdAt", "updatedAt"]
    }
  },
  "auth": {
    "providers": ["email", "google.com", "github.com"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/UserProfile"
      },
      "description": "Stores user profile information."
    },
    "/projects/{projectId}": {
      "schema": {
        "$ref": "#/entities/Project"
      },
      "description": "Stores project information for all users."
    }
  }
}
