{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile information.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "The user's unique ID."
        },
        "username": {
          "type": "string",
          "description": "The user's unique username."
        },
        "name": {
          "type": "string",
          "description": "The user's full name."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "bio": {
          "type": "string",
          "description": "A short biography of the user."
        },
        "jobTitle": {
          "type": "string",
          "description": "The user's professional job title."
        },
        "location": {
          "type": "string",
          "description": "The user's physical location."
        },
        "availability": {
          "type": "string",
          "enum": ["open to work", "available for freelance", "not available"],
          "description": "The user's work availability status."
        },
        "skills": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "A list of the user's skills."
        },
        "socials": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "platform": {
                "type": "string",
                "enum": ["github", "linkedin", "twitter", "website"]
              },
              "url": {
                "type": "string",
                "format": "uri"
              }
            },
            "required": ["platform", "url"]
          }
        },
        "createdAt": {
            "type": "string",
            "format": "date-time"
        },
        "updatedAt": {
            "type": "string",
            "format": "date-time"
        }
      },
      "required": ["id", "username", "name", "email", "createdAt", "updatedAt"]
    },
    "Project": {
      "title": "Project",
      "description": "Represents a project in a user's portfolio.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "userId": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "imageUrl": {
          "type": "string",
          "format": "uri",
          "description": "URL for the project's cover image."
        },
        "techStack": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "githubLink": {
          "type": "string",
          "format": "uri"
        },
        "liveDemo": {
          "type": "string",
          "format": "uri"
        },
        "createdAt": {
            "type": "string",
            "format": "date-time"
        },
        "updatedAt": {
            "type": "string",
            "format": "date-time"
        }
      },
      "required": ["id", "userId", "title", "description", "techStack", "createdAt", "updatedAt"]
    },
    "Username": {
      "title": "Username",
      "description": "Maps a username to a user ID for public lookups.",
      "type": "object",
      "properties": {
        "userId": {
          "type": "string",
          "description": "The unique ID of the user."
        }
      },
      "required": ["userId"]
    },
    "Portfolio": {
        "title": "Portfolio",
        "description": "Represents a user's portfolio.",
        "type": "object",
        "properties": {
            "id": {
                "type": "string"
            },
            "userId": {
                "type": "string"
            },
            "name": {
                "type": "string"
            },
            "slug": {
                "type": "string",
                "description": "The URL-friendly slug for the portfolio."
            },
            "projectIds": {
                "type": "array",
                "items": {
                    "type": "string"
                },
                "description": "A list of project IDs included in this portfolio."
            },
            "selectedTemplate": {
                "type": "string",
                "enum": [
                    "minimal-light",
                    "modern-dark",
                    "professional-blue",
                    "retro-gamer",
                    "brutalist-web",
                    "cyberpunk-neon",
                    "elegant-serif",
                    "cosmic-dream",
                    "hacker-terminal",
                    "craftsman-paper",
                    "photo-grid",
                    "lakeside-dawn",
                    "geometric-dark",
                    "minimal-serif",
                    "corporate-clean",
                    "glassmorphism",
                    "neobrutalism",
                    "storybook",
                    "two-column-image",
                    "bold-and-blue",
                    "newspaper",
                    "dark-academia"
                ]
            },
            "isPrimary": {
                "type": "boolean",
                "description": "Whether this is the user's primary portfolio, linked from /[username]."
            },
            "createdAt": {
                "type": "string",
                "format": "date-time"
            },
            "updatedAt": {
                "type": "string",
                "format": "date-time"
            }
        },
        "required": ["id", "userId", "name", "slug", "projectIds", "selectedTemplate", "isPrimary", "createdAt", "updatedAt"]
    }
  },
  "auth": {
    "providers": ["email", "google.com", "github.com"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/UserProfile"
      },
      "description": "Stores user profile information."
    },
    "/portfolios/{portfolioId}": {
        "schema": {
            "$ref": "#/entities/Portfolio"
        },
        "description": "Stores portfolio information."
    },
    "/projects/{projectId}": {
      "schema": {
        "$ref": "#/entities/Project"
      },
      "description": "Stores project information for all users."
    },
    "/usernames/{username}": {
      "schema": {
        "$ref": "#/entities/Username"
      },
      "description": "Maps usernames to user IDs for public profile lookups."
    }
  }
}
