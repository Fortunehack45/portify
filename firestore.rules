
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Usernames:
    // - Anyone can read a username to find a user's ID.
    // - A user can create their own username mapping, but cannot change it.
    // - A user cannot steal an existing username.
    match /usernames/{username} {
      allow read;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    // User Profiles:
    // - Anyone can read a user's public profile.
    // - A user can create, update, and delete their own profile.
    match /users/{userId} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Portfolios:
    // - Anyone can read a portfolio.
    // - A user can create, update, and delete their own portfolios.
    match /portfolios/{portfolioId} {
      allow read;
      allow write: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
    
    // Projects:
    // - Anyone can read a project.
    // - A user can create, update, and delete their own projects.
    match /projects/{projectId} {
      allow read;
      allow write: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
  }
}
